# hook 的执行顺序是先声明、后调用
#
# 1. 启动后立即使用折叠方式显示邮件
folder-hook . push "<collapse-all><first-entry><last-entry><next-unread>"
# 2. 进入公司邮箱后自动切换邮送域，不自动签名
folder-hook fnst- set "from='sunwuan@cn.fujitsu.com'"
folder-hook fnst- set "crypt_autosign=no"
# 3. 私人邮箱，切换邮送域，自动签名
folder-hook personal set "from='Vern Sun <s5unty@gmail.com>'"
folder-hook personal set "crypt_autosign=yes"
# 4. 除了显示搜索结果的临时邮箱，其余邮箱只显示最近一个月的邮件
# folder-hook !(bingo) push "<limit>~d\"*30d\"<enter>"
folder-hook fnst-cluster push "<limit>\"!(~s 日报)\"<enter>"
# 5. 给日本人的邮件用日文签名，其他的用中文签名
send-hook    @cn.fujitsu.com "set from='孙武安 <sunwuan@cn.fujitsu.com>'; set signature='~/.mutt/signature zh|'"
send-hook   .*jp.fujitsu.com "set from='Sun Wuan <sunwuan@cn.fujitsu.com>'; set signature='~/.mutt/signature ja|'"
reply-hook   @cn.fujitsu.com "set locale='zh_CN.UTF-8'; set signature='~/.mutt/signature zh|'"
reply-hook  .*jp.fujitsu.com "set locale='ja_JP.UTF-8'; set signature='~/.mutt/signature ja|'"
# 6. 给邮件列表的邮件不要保存已发邮件，私人邮箱就地保存
send-hook    (fnst-cluster|fjh-pcl-fnst|fnst-ssg|fnst-basesoft|fnst-ulinux)  "set record=''"
send-hook   !(fnst-cluster|fjh-pcl-fnst|fnst-ssg|fnst-basesoft|fnst-ulinux)  "set record='=fnst-inbox'"
reply-hook   (fnst-cluster|fjh-pcl-fnst|fnst-ssg|fnst-basesoft|fnst-ulinux)  "set record=''"
reply-hook  !(fnst-cluster|fjh-pcl-fnst|fnst-ssg|fnst-basesoft|fnst-ulinux)  "set record='=fnst-inbox'"
