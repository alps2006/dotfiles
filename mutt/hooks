# hook 的执行顺序是先声明、后调用
#
# 邮箱默认使用折叠方式显示
folder-hook . "push '<collapse-all><current-bottom>'"
# 真实邮箱，每次初始化高亮，只显示最近一个月的邮件
folder-hook !(bingo) "source ~/.mutt/colours"
folder-hook !(bingo) "push <limit>~d\"*30d\"<enter>"
# 私人邮箱，切换邮送域，自动gpg签名
folder-hook personal "set from='Vern Sun <s5unty@gmail.com>'"
folder-hook personal "set crypt_autosign=yes"
# 公司邮箱，切换邮送域，不用gpg签名
folder-hook fnst- "set from='Sun Wuan <sunwuan@cn.fujitsu.com>'"
folder-hook fnst- "set crypt_autosign=no"
# 公司邮箱，自动选择合适的中日签名
send-hook    @cn\.f.j.t..\.com "set signature='~/.mutt/signature zh|'"
send-hook   .*jp\.f.j.t..\.com "set signature='~/.mutt/signature ja|'"
reply-hook   @cn\.f.j.t..\.com "set signature='~/.mutt/signature zh|'"
reply-hook  .*jp\.f.j.t..\.com "set signature='~/.mutt/signature ja|'"
# 公司列表，不保存外发邮件，私人邮箱就地保存
send-hook    (fnst-cluster|fjh-pcl-fnst|fnst-ssg|fnst-basesoft|fnst-ulinux)  "set record=''"
send-hook   !(fnst-cluster|fjh-pcl-fnst|fnst-ssg|fnst-basesoft|fnst-ulinux)  "set record='=fnst-inbox'"
reply-hook   (fnst-cluster|fjh-pcl-fnst|fnst-ssg|fnst-basesoft|fnst-ulinux)  "set record=''"
reply-hook  !(fnst-cluster|fjh-pcl-fnst|fnst-ssg|fnst-basesoft|fnst-ulinux)  "set record='=fnst-inbox'"

