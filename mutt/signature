#! /bin/sh

echo ''
if ! hostname | grep "^verns-worktop" > /dev/null 2>&1; then
    echo 'Cheers,\n-- \nVern'
    echo 'vim -c ":s(^(ZnQr8va1puvan.(|:s)\d\(\S\)) \\U\\1)g|:1 normal g??"'
else
    case "$1" in
    en)
        echo 'Cheers,'
        name=$(echo 'Fha Jhna' | tr a-zA-Z n-za-mN-ZA-M)
        time=$(LANG=en_US.UTF-8 && echo "`date +'%Y.%m.%d(%a)'`");;
    ja)
        echo '以上、よろしくお願いします。'
        name=$(echo "0x5B6B0x6B660x5B89" | ascii2uni -q)
        time=$(LANG=ja_JP.UTF-8 && echo "`date +'%Y.%m.%d(%a)'`");;
    *)
        name=$(echo "0x5B590x6B660x5B89" | ascii2uni -q)
        time=$(LANG=zh_CN.UTF-8 && echo "`date +'%Y.%m.%d(%a)'`");;
    esac
    echo '-- '
    echo ${name}
    echo ${time}
    echo '----------------------------------------------------'
    echo 'Fha Jhna' | tr a-zA-Z n-za-mN-ZA-M
    echo 'Development Dept. I'
    echo 'Nanjing Fujitsu Nanda Software Tech. Co., Ltd.(FNST)'
    echo 'No. 6 Wenzhu Road, Nanjing, 210012, China'
    echo 'TEL: +86+25-86630566-8201'
    echo 'COINS: 7998-8201'
    echo 'FAX: +86+25-83317685'
    echo 'ZNVY: fhajhna@pa.shwvgfh.pbz' | tr a-zA-Z n-za-mN-ZA-M
    echo '----------------------------------------------------'
fi

