#! /bin/sh

echo ''
if ! hostname | grep "^verns-worktop" > /dev/null 2>&1; then
    echo 'Cheers,\n-- \nVern'
    echo 'vim -c ":s(^(ZnQr8va1puvan.(|:s)\d\(\S\)) \\U\\1)g|:1 normal g??"'
else
    case "$1" in
    en)
        echo 'Cheers,'
        LANG=en_US.UTF-8 && echo "`date +"%Y.%m.%d(%a)"`\n-- ";;
    ja)
        echo '以上、よろしくお願いいたします。'
        LANG=ja_JP.UTF-8 && echo "`date +"%Y.%m.%d(%a)"`\n-- ";;
    *)
        LANG=zh_CN.UTF-8 && echo "`date +"%Y.%m.%d(%a)"`\n-- ";;
    esac
    echo '----------------------------------------------------'
    echo 'Fha Jhna' | tr a-zA-Z n-za-mN-ZA-M
    echo 'Development Dept. I'
    echo 'Nanjing Fujitsu Nanda Software Tech. Co., Ltd.(FNST)'
    echo 'No. 6 Wenzhu Road, Nanjing, 210012, China'
    echo 'TEL: +86+25-86630566-8513'
    echo 'COINS: 7998-8513'
    echo 'FAX: +86+25-83317685'
    echo 'ZNVY: fhajhna@pa.shwvgfh.pbz' | tr a-zA-Z n-za-mN-ZA-M
    echo '----------------------------------------------------'
