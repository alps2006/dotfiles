# 阅读正文时
bind pager      k           previous-line
bind pager      j           next-line
bind pager      P           recall-message # 'R'ecall-message move to 'P'
bind pager      .           next-entry
bind pager      ,           previous-entry
bind pager     \;           next-new-then-unread
bind pager      b           previous-page
bind pager      <BackTab>   previous-new-then-unread
bind pager      <Backspace> parent-message
bind pager      r           group-reply
bind pager      R           reply
bind pager      S           decode-save
bind pager      <Space>     half-down
bind pager      -           half-up
# 浏览首页时
bind index      0           collapse-thread
bind index     \;           current-middle
bind index     \'           tag-prefix
bind index      <Esc>.      next-unread-mailbox
bind index     \\           last-entry
bind index      P           recall-message # 'R'ecall-message move to 'P'
bind index      N           search-opposite
bind index      -           half-up
bind index      <BackTab>   previous-new-then-unread
bind index      r           group-reply
bind index      R           reply
bind index      S           decode-save
bind index      i           collapse-thread
bind index      z           collapse-thread
bind index      <Esc>t      tag-pattern
# 编辑邮件头、命令行时
bind editor     <Esc>p      history-up
bind editor     <Esc>n      history-down
# 浏览通讯录时
bind alias      N           search-opposite
# 切换邮箱/查看目录时
bind browser    i           exit
bind browser    l           select-entry
bind browser    <space>     select-entry
# 查看附件时
bind attach     i           exit
bind attach     <space>     view-attach
# 使用自定义查询
bind editor     <Tab>       complete-query
# v1.8.3
bind index,pager \cn        sidebar-next
bind index,pager \cp        sidebar-prev
bind index,pager \co        sidebar-open
bind index,pager \ck        sidebar-toggle-visible
bind index,pager x          vfolder-from-query
