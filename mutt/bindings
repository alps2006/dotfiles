# 阅读正文时
bind pager      k           previous-line
bind pager      j           next-line
bind pager      P           recall-message # 'R'ecall-message move to 'P'
bind pager      R           group-reply    # reply to all
bind pager      .           next-entry
bind pager      ,           previous-entry
bind pager     \;           next-new-then-unread
bind pager      b           previous-page
bind pager      <BackTab>   previous-new-then-unread
bind pager      <Backspace> parent-message
# 浏览首页时
bind index      0           collapse-thread
bind index     \;           current-middle
bind index     \\           last-entry
bind index      P           recall-message # 'R'ecall-message move to 'P'
bind index      R           group-reply    # reply to all
bind index      N           search-opposite
bind index      -           half-up
bind index      <BackTab>   previous-new-then-unread
# 浏览通讯录时
bind alias      N           search-opposite
# 切换邮箱/查看目录时
bind browser    l           select-entry
bind browser    <space>     select-entry
# 查看附件时
bind attach     i           exit
bind attach     <space>     view-attach
# 使用 Google 联系人
bind editor     <Tab>       complete-query
