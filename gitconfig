[user]
    name = Vern Sun
    email = s5unty@gmail.com
[format]
    headers = ""
    subjectprefix = ""
[color]
    status = auto
    diff = auto
    branch = auto
    interactive = auto
[alias]
    ci  = commit
    cm  = commit --amend
    co  = checkout
    cd  = checkout -b
	cp  = cherry-pick --no-commit

    di  = diff -w -p --stat # show difference between working tree and the index
    dc  = diff -w -p --stat --cached # show difference between index and local repos, what would be committed with "git commit"
    da  = diff -w -p --stat HEAD # show difference between working tree and local repos, what would be committed with "git commit -a"
    df  = diff -w --stat HEAD # show different files between working tree and the index
	dt  = difftool

    fp  = format-patch -s

	ll  = log --pretty=format:'%C(blue)%h%Creset %cn %m %s %C(green)%C(dim)%cr%Creset %C(white)%C(bold)%d%Creset' --branches --graph --since='1 months ago'
    ls  = log --pretty=format:'%C(blue)%h%Creset %ce %m %s %C(green)%C(dim)%ci%Creset %C(white)%C(bold)%d%Creset' --all --graph

    ms  = merge --squash
    mt  = mergetool

    # 核弹级选项: filter-branch
    # http://progit.org/book/zh/ch6-4.html
    nc = filter-branch --tree-filter

    st  = status

    zc  = stash save
    zl  = stash list
    zo  = stash pop
    zd  = stash drop

    dci = svn dcommit
    dco = svn clone
    dup = svn rebase
    dll = svn log --oneline --limit=20
    dls = svn log
[diff]
	tool = vimdiff
[merge]
    tool = persistent
[mergetool "persistent"]
###  Brian Phillips: http://stackoverflow.com/questions/585844/merging-with-git-mergetool
#    cmd = "gvim --noplugin --remote-tab-silent \"+set buftype=nowrite\" \"$PWD/$MERGED\" && sleep 1;\
#           gvim --remote-send \":split $PWD/$REMOTE<CR>:set buftype=nowrite<CR>:vertical diffsplit $PWD/$LOCAL<CR>:vertical diffsplit $PWD/$BASE<CR>:set buftype=nowrite<CR><C-W>l\""
    cmd = "vim --noplugin -d \"$PWD/$MERGED\" \
        +\":split $PWD/$REMOTE\" +\":set buftype=nowrite\" \
        +\":vertical diffsplit $PWD/$LOCAL\" +\":set buftype=nowrite\" \
        +\":vertical diffsplit $PWD/$BASE\" +\":set buftype=nowrite\" \
        +\":wincmd j\" \
        +\":nmap <ESC>1 :diffget BASE<CR>:diffupdate<CR>\" \
        +\":nmap <ESC>2 :diffget LOCAL<CR>:diffupdate<CR>\" \
        +\":nmap <ESC>3 :diffget REMOTE<CR>:diffupdate<CR>\" "
[core]
    excludesfile = /sun/home/.gitignore
[gui]
	fontdiff = -family \"Andale Mono\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0
[branch "master"]
	remote = origin
	merge = refs/heads/master
[tig]
	show-date = yes
	author-width = 16
	line-graphics = no
	tab-size = 4
[tig "color"]
	default = default default
	date = green default italic
	author = default default
	cursor = white blue
	title-blur = black white
	title-focus = black white bold
[tig "bind"]
	diff = i view-close
	diff = , previous
	diff = . next
	log = i view-close

