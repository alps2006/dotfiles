[user]
    name = Vern Sun
    email = s5unty@gmail.com
[format]
    headers = ""
    subjectprefix = ""
[color]
    status = auto
    diff = auto
    branch = auto
    interactive = auto
[alias]
    br  = branch -v
    bs  = show-branch

    ci  = commit
    cm  = commit --amend
    co  = checkout
    cd  = checkout -b

    di  = diff -p --stat # show difference between working tree and the index
    dc  = diff --cached --stat # what would be committed with "git commit"
    da  = diff -p --stat HEAD # what would be committed with "git commit -a"
    df  = diff --stat # show different files between working tree and the index

    fp  = format-patch -s

    sa  = stash
    sl  = stash list
    sp  = stash pop

    ll  = log --pretty=format:'%Cgreen%h%Creset ... %s %Cred%d%Creset' --decorate --all --graph -20
    ls  = log --pretty=format:'%Cgreen%h%Creset ... %an - %s %Cblue%ar%Creset' -20

    me  = merge
    mt  = mergetool

    rs  = reset
    rf  = reset --hard
    del = reset HEAD

    rb  = rebase
    rc  = rebase --continue

    st  = status

    dci = svn dcommit
    dco = svn clone
    dup = svn rebase
    dll = svn log --oneline --limit=20
    dlog= svn log
[merge]
    tool = persistent
[mergetool "persistent"]
###  Brian Phillips: http://stackoverflow.com/questions/585844/merging-with-git-mergetool
#    cmd = "gvim --noplugin --remote-tab-silent \"+set buftype=nowrite\" \"$PWD/$MERGED\" && sleep 1;\
#           gvim --remote-send \":split $PWD/$REMOTE<CR>:set buftype=nowrite<CR>:vertical diffsplit $PWD/$LOCAL<CR>:vertical diffsplit $PWD/$BASE<CR>:set buftype=nowrite<CR><C-W>l\""
    cmd = "vim --noplugin -d \"$PWD/$MERGED\" \
        +\":split $PWD/$REMOTE\" +\":set buftype=nowrite\" \
        +\":vertical diffsplit $PWD/$LOCAL\" +\":set buftype=nowrite\" \
        +\":vertical diffsplit $PWD/$BASE\" +\":set buftype=nowrite\" \
        +\":wincmd j\" \
        +\":nmap <ESC>1 :diffget BASE<CR>:diffupdate<CR>\" \
        +\":nmap <ESC>2 :diffget LOCAL<CR>:diffupdate<CR>\" \
        +\":nmap <ESC>3 :diffget REMOTE<CR>:diffupdate<CR>\" "
[core]
    excludesfile = /sun/home/.gitignore
[gui]
	fontdiff = -family \"Andale Mono\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0
