hi StatusLine background: #DCDAD5;

" binding
map    . <C-PageDown>
map    , <C-PageUp>
map -- - <C-b>
map   \\ <C-i>
map <BS> <C-o>
map    j 2<C-e>
map    k 2<C-y>
map <C-q> :winclose<CR>
map <C-.> :tabm +1<CR>
map <C-,> :tabm -1<CR>
map W     ;w
map r     ;c

" macro
map <silent> <F2>  :set encoding=GB2312<CR>
map <silent> <S-F2> :set encoding=UTF-8<CR>
map <silent> <F12> :set! extensions.autoproxy.proxyMode=global<CR>:echo ':('<CR>
map <silent> <S-F12> :set! extensions.autoproxy.proxyMode=auto<CR>:echo ':)'<CR>

" delicious
map <silent> a :emenu Delicious.Save a new Bookmark...<CR>
command! -nargs=* delicious topen b <args>
map B :delicious 
map <silent> b :emenu Delicious.Bookmarks Sidebar<CR>

" general
set go=b
set cpt=bl
set fc
set shell="/usr/bin/zsh"
set editor="urxvt -e vim -f"
set newtab=all
