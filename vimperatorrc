" work with theme 'Chromifox Extreme'
hi StatusLine background: #D2E1F6;

" binding
map    . <C-PageDown>
map    , <C-PageUp>
map -- - <C-b>
map   \\ <C-i>
map <BS> <C-o>
map    j 2<C-e>
map    k 2<C-y>

" macro
map <F2>  :set encoding=GB2312<CR>
map <C-q> :winclose<CR>
map <C-.> :tabm +1<CR>
map <C-,> :tabm -1<CR>
map W     ;w
map b     :bmarks -tag

map <silent> qd :set ds=d<CR>P:set ds=google<CR>
map <silent> qg :set ds=gtk<CR>P:set ds=google<CR>
map <silent> qb :set ds=baidu<CR>P:set ds=google<CR>
map <silent> qw :set ds=wc<CR>P:set ds=google<CR>
map <silent> qp :set ds=pkg<CR>P:set ds=google<CR>
map <silent> <F12> :set! extensions.autoproxy.proxyMode=global<CR>
map	<silent> <S-F12> :set! extensions.autoproxy.proxyMode=auto<CR>

" general
set go=b
set cpt=sl
set fc
set shell="/usr/bin/zsh"
set editor="urxvt -e zsh -c 'stty -ixon; vim --noplugin'"
set newtab=all
