colour title=+yellow
colour info=green
colour veryhigh=red
colour high=cyan
colour medium=magenta
colour low=blue
colour verylow=green
colour comment=green

format date=%F %R
format display=%2>%i%[info]%f%2n.%[priority]%+2T\n
format verbose-display=%2>%i%[info]%f%2n.%[priority]%+2T\n%+1i%[info]-- %F, %d, added on %c, %D\n

on add verbose
on edit verbose
on title verbose
on done verbose
on link verbose
on remove verbose
on create {
    exec chmod 600 $TODODB
}

priority medium
timeout 10
paranoid
comment
global-database $HOME/.todo
sort priority,-created,-text
date-format %F %R

# When saving a database, also create a HTML version as .todo.html.
on save {
    if [ -f `which sabcmd` ]; then
        exec sabcmd /usr/share/devtodo/todo2html.xslt $TODODB > $TODODB.html
        exec chmod 600 $TODODB.html
        echo HTML `$TODODB.html' created
    fi
}

