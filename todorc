colour title=+yellow
colour info=cyan
colour veryhigh=white
colour high=magenta
colour medium=yellow
colour low=green
colour verylow=blue
colour comment=blue

format date=%F %R
format display=%2>%i%[info]%f%2n.%[priority]%+2T\n
format verbose-display=%2>%i%[info]%f%2n.%[priority]%+2T\n%+1i%[info]-- %F, %d, added on %c, %D\n

on add verbose
on edit verbose
on title verbose
on done verbose
on link verbose
on remove verbose
on create {
    exec chmod 600 $TODODB
}

priority veryhigh
timeout 10
paranoid
comment
global-database $HOME/.todo
sort -created
date-format %F %R

