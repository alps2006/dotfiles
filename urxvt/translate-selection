#! perl

my $DEBUG = 1;
my $DEBUG_FILE = '/tmp/urxvt_dict.log';
my $DEBUG_FH;

sub on_start {
    my ($self) = @_;
    $self->grab_button (3, urxvt::AnyModifier);

    if ($DEBUG){
        open($DEBUG_FH, ">$DEBUG_FILE");
        select((select($DEBUG_FH), $| = 1)[0]);
    }

    ()
}


sub leave {
   my ($self, $event) = @_;

   if ($DEBUG){
      close($DEBUG_FH);
   }
}

sub on_button_press {
    my ($self, $event) = @_;

    if ($event->{button} == 3) {
        print $DEBUG_FH "1======\n";
        my $popup = $self->popup ($event)
            or return 1;

        print $DEBUG_FH "2======\n";
        my $title = $self->selection;
        utf8::encode($title);
        if (open(my $process, "export LANG=zh_CN.UTF-8; /usr/bin/sdcv -n --utf8-output -u 'jmdict-ja-en' -u 'xdict-en-zh' '$title' 2>&1 |")) {
            $title = join('', <$process>);
        } else {
            print $DEBUG_FH "?======\n";
        }
        print $DEBUG_FH "3======\"$title\"\n";
        my @dict = ($title =~ /.*\n/g);
        splice(@dict, 0, 4); # 删除前四行
        splice(@dict, -1);   # 删除末尾行
        splice(@dict, 10);   # 只保留十行
        for my $eachline (@dict) {
            print $DEBUG_FH "3.0======\"$eachline\"\n";
            chomp $eachline;
            print $DEBUG_FH "3.1======\"$eachline\"\n";
            $eachline = $self->locale_decode($eachline);
            print $DEBUG_FH "3.2======\n";
            $popup->add_title ($eachline);
            print $DEBUG_FH "3.3======\n";
        }
        print $DEBUG_FH "4======\n";

        $popup->show;
        print $DEBUG_FH "5======\n";

        return 0;
    }

    ()
}

